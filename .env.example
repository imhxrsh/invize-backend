# Invize Backend - Example Environment

# Server
API_HOST=127.0.0.1
API_PORT=8000
LOG_LEVEL=info
APP_ENV=development
SERVICE_VERSION=0.1.0

# Swarms Agent
# Groq Cloud API key (do not commit the real key)
GROQ_API_KEY="your-groq-api-key"

# Hello agent default model (Groq Cloud OpenAI-compatible)
AGENT_MODEL_NAME="openai/gpt-oss-20b"

# --------------------------------------------
# Document Intelligence Agent Configuration
# --------------------------------------------
# Redis connection for job status/result storage
REDIS_URL=redis://localhost:6379/0

# File processing limits
MAX_FILE_SIZE_MB=50
# Note: supported formats are defined in code and include: pdf,png,jpg,jpeg,tiff,tif,txt

# OCR configuration
TESSERACT_LANGS=eng
PSM_DEFAULT=6
OEM_DEFAULT=3

# PDF processing
PDF_DPI=300

# Logging (INFO, DEBUG, WARNING, ERROR)
# Overrides the general LOG_LEVEL above if desired
LOG_LEVEL=INFO

# LayoutLM configuration
USE_LAYOUTLM=false
LAYOUTLM_MODEL=microsoft/layoutlmv3-base
LAYOUTLM_DEVICE=auto
LAYOUTLM_TASK=token-classification
LAYOUTLM_CONFIDENCE_THRESHOLD=0.5